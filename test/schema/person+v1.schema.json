{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://footown.com/generic/person#",
  "type": "object",
  "required": [
    "firstname",
    "lastname"
  ],
  "properties": {
    "firstname": {
      "$ref": "#/definitions/name"
    },
    "lastname": {
      "$ref": "#/definitions/name"
    },
    "title": {
      "type": "string",
      "enum": ["mr", "mrs", "ms", "dr", "prof"]
    }
  },
  "definitions": {
    "name": {
      "type": "string",
      "minLength": 1
    }
  }
}
